# Exercise 9

types_of_people = 10
x = f"There are {types_of_people} types of people."
binary = "binary"
do_not = "don't"
y = f"Those who know {binary} and those who {do_not}." # string put inside a string 1

print(x)
print(y)
print(f"I said: {x}") # string put inside a string 2
print(f"I also said: {y}") # string put inside a string 3

hilarious = True
joke_evaluation = "Isn't that joke so funny?! {}"

print(joke_evaluation.format(hilarious))

w = "This is the left side of..."
e = "a string with a right side."

print(w + e) # string put inside a string 4.  Adding a string concatenates the two smaller strings


